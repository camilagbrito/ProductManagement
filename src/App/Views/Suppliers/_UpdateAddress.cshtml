@model App.ViewModels.SupplierViewModel
   
@{
    ViewData["Title"] = "Atualizar Endereço";
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="btn-close" data-bs-dismiss="modal">
        <span aria-hidden="true" class="sr-only">Fechar</span>
    </button>
</div>

<form asp-action="UpdateAddress">
<div class="modal-body">
    <input type="hidden" asp-for="Address.SupplierId" />
    <input type="hidden" asp-for="Address.Id" />

    <partial name="_Address"/>

    <div class="modal-footer">
        <div class="col-md-offset-2 col-md-10"> 
            <input type="submit" value="Atualizar Endereço" class="btn btn-success"/>
            <input type="button" class="btn btn-info" value="Fechar" data-bs-dismiss="modal" />
        </div>
    </div>
</div>
</form>

<script>
    SearchZipCode();
</script>